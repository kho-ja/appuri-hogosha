{
	"name": "mobile-backend",
	"version": "1.0.0",
	"description": "Push notification and SMS backend using AWS End User Messaging",
	"main": "dist/index.js",
	"scripts": {
		"dev": "nodemon",
		"build": "tsc -p .",
		"start": "node dist/index.js",
		"prepare-dist": "npm run build && mkdir -p dist && cp package.json dist/ && cp package-lock.json dist/",
		"test": "npm run prepare-dist && cp -r node_modules dist/node_modules",
		"install-prod-deps": "cd dist && npm install --only=production",
		"deploy": "npm run prepare-dist && npm run install-prod-deps",
		"analyze-db": "npx ts-node src/scripts/analyze-db-tokens.ts",
		"analyze-sms-operators": "npx ts-node src/scripts/analyze-sms-operators.ts",
		"debug-push": "npx ts-node src/scripts/debug-push-notifications.ts",
		"test-token": "npx ts-node src/scripts/test-notification-token.ts",
		"test-sms": "npx ts-node src/scripts/test-sms-sending.ts",
		"sms-diagnostics": "npx ts-node src/scripts/sms-delivery-diagnostics.ts",
		"send": "npx ts-node src/scripts/send-notification.ts",
		"lint": "eslint . --ext .ts,.tsx",
		"lint:fix": "eslint . --ext .ts,.tsx --fix",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"aws",
		"end-user-messaging",
		"push-notifications",
		"sms",
		"telegram",
		"worldwide",
		"refactored",
		"modular"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@aws-crypto/client-node": "^4.2.1",
		"@aws-sdk/client-cognito-identity-provider": "^3.839.0",
		"@aws-sdk/client-pinpoint": "^3.800.0",
		"@aws-sdk/client-pinpoint-sms-voice-v2": "^3.800.0",
		"dotenv": "^16.4.7",
		"expo-server-sdk": "^3.15.0",
		"mysql2": "^3.9.6",
		"telegraf": "^4.16.3"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"eslint-plugin-prettier": "^5.5.4",
		"nodemon": "^3.1.0",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^5.4.5"
	}
}
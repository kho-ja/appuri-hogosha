{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "sourceMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "jest",
            "node"
        ],
        "baseUrl": "./src",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
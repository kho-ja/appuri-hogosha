# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=username
DB_PASSWORD=password
DB_DATABASE=database_name

# Server Configuration
PORT=8000
NODE_ENV=development

# Pagination
PER_PAGE=10

# AWS/Cognito Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id

# Google OAuth via Cognito (for admin panel)
ADMIN_CLIENT_ID=your_admin_client_id
ADMIN_CLIENT_SECRET=your_admin_client_secret
COGNITO_DOMAIN=https://your-app-admin.auth.us-east-1.amazoncognito.com
# Must include base path since admin routes mount at /admin-panel
BACKEND_URL=http://localhost:3001/admin-panel
FRONTEND_URL=http://localhost:3000

# S3 Configuration
S3_BUCKET_NAME=your_bucket_name

# Use mock Cognito for development
USE_MOCK_COGNITO=false
